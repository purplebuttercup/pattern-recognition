<SCRIPT LANGUAGE="JavaScript">


<!-- Baseline text scroller for Navigator

/* Hide Script -->
<!--
*/

function scroll_text(seed)
{
   var m1  = "Welcome to CABOT OIL & GAS CORPORATION";
   var m2  = " . . . A Leading Independent Producer and Marketer of Natural Gas.";
   var msg=m1+m2;
   var out = " ";
   var c   = 1;

   if (seed > 100) {
      seed--;
      var cmd="scroll_text(" + seed + ")";
      timerTwo=window.setTimeout(cmd,100);

/* Hide Script -->
<!--
*/

   }
   else if (seed <= 100 && seed > 0) {
      for (c=0 ; c < seed ; c++) {
         out+=" ";
      }
      out+=msg;
      seed--;
      var cmd="scroll_text(" + seed + ")";
      window.status=out;
      timerTwo=window.setTimeout(cmd,100);

/* Hide Script -->
<!--
*/

   }
   else if (seed <= 0) {
      if (-seed < msg.length) {
         out+=msg.substring(-seed,msg.length);
         seed--;
         var cmd="scroll_text(" + seed + ")";
         window.status=out;
         timerTwo=window.setTimeout(cmd,100);
      }
      else {
         window.status=" ";
         timerTwo=window.setTimeout("scroll_text(100)",75);
      }
   }
}
// End of Script -->
</SCRIPT>

