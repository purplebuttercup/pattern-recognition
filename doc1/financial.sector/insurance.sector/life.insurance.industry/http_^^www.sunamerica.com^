  <script language="JavaScript"><!--

var mouseEvents = false;
if (document.images || (navigator.appCodeName == 'MSIE' && navigator.appVersion.substring(0,1) > 3)) mouseEvents = true;

function mouseOver(imgName) {
	if (mouseEvents) {
		var suffix = "2.gif";
		document[imgName].src =  document[imgName].src.substring(0,document[imgName].src.length - suffix.length) + suffix;
	}
}

function mouseOut(imgName) {
	if (mouseEvents) {
		var suffix = "1.gif";
		document[imgName].src =  document[imgName].src.substring(0,document[imgName].src.length - suffix.length) + suffix;
	}
}

// --></script>

