function scrollit_r2l(seed)
{
        var msg="Foamex achieves QS - 9000 Certification.  Click 'What's New' to read all about it.";
        var out = " ";
        var c   = 1;

        if (seed > 70) {
                seed--;
                var cmd="scrollit_r2l(" + seed + ")";
                timerTwo=window.setTimeout(cmd,70);
        }
        else if (seed <= 70 && seed > 0) {
                for (c=0 ; c < seed ; c++) {
                        out+=" ";
                }
                out+=msg;
                seed--;
                var cmd="scrollit_r2l(" + seed + ")";
                    window.status=out;
                timerTwo=window.setTimeout(cmd,70);
        }
        else if (seed <= 0) {
                if (-seed < msg.length) {
                        out+=msg.substring(-seed,msg.length);
                        seed--;
                        var cmd="scrollit_r2l(" + seed + ")";
                        window.status=out;
                        timerTwo=window.setTimeout(cmd,70);
                }
                else {
                        window.status=" ";
                        
timerTwo=window.setTimeout("scrollit_r2l(70)",75);
                }
        }
}
// -- End of JavaScript code -------------- -->


</SCRIPT>



