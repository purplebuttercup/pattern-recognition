function scrollit_r2l(seed)
{
	var m0 = "   ";      
 var m1  = " Welcome to Elantec Semiconductor, Inc. ";
  var m2  = "          ";
	var h1  = "  High Performance Analog Integrated Circuits.";
	var h21  = "      ";
         var h22 = "  Setting the Industry Standard.";
         var h31 = "    ";
         var h32 =  "    ";
         
         
		var msg=m0+m1+m2+h1+h21+h22+h31+h32
	var out = " ";
	var c   = 0;

	if (seed > 100) {
		seed--;
		var cmd="scrollit_r2l(" + seed + ")";
		timerTwo=window.setTimeout(cmd,10);
	}
	else if (seed <= 100 && seed > 0) {
		for (c=0; c < seed ; c++) {
			out+=" ";
		}
		out+=msg;
		seed--;
		var cmd="scrollit_r2l(" + seed + ")";
		window.status=out;
		timerTwo=window.setTimeout(cmd,88);
	}
	else if (seed <= 0) {
		if (-seed < msg.length) {
			out+=msg.substring(-seed,msg.length);
			seed--;
			var cmd="scrollit_r2l(" + seed + ")";
			window.status=out;
			timerTwo=window.setTimeout(cmd,88);
		}
		else {
			window.status=" ";
			timerTwo=window.setTimeout("scrollit_r2l(11)",15);
		}
	}
}
// -- End of JavaScript code -------------- -->
</SCRIPT>
